WidgetsExample:

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Click Here"
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/playtime.ttf"
        font_size: "50dp"
    Switch:
        on_active: root.on_switch_active(self)
        text: "OFF"
        size_hint: None, 1
        width: "100dp"
    Slider:
        min: 0
        max: 100
        value: 25
        on_value: root.on_slider_value(self)
        orientation: "vertical"
    Label:
        text: root.my_slider_text
        # font_name: "fonts/.ttf"
        font_size: "20dp"


